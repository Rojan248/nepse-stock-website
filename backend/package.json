{
  "name": "nepse-backend",
  "version": "1.0.0",
  "description": "Scraper and API server for NEPSE stock data",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --ignore data/ --ignore logs/ src/server.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration/",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop nepse-backend",
    "pm2:restart": "pm2 restart nepse-backend",
    "pm2:delete": "pm2 delete nepse-backend",
    "pm2:logs": "pm2 logs nepse-backend",
    "pm2:status": "pm2 status"
  },
  "keywords": [
    "nepse",
    "stock",
    "scraper",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nepse-api-helper": "^2.6.0",
    "node-schedule": "^2.1.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pm2": "^6.0.14",
    "supertest": "^6.3.4"
  }
}
